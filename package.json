{
  "name": "digital-mini-painter",
  "version": "0.8.0",
  "private": true,
  "type": "module",
  "description": "Mini Painting App - A React and Electron-based painting application.",
  "author": "Joe Spizz spizjo01@gmail.com",
  "main": "dist-electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "vite build && electron-builder",
    "lint": "eslint . --ext .js,.jsx",
    "preview": "vite preview",
    "electron-dev": "electron-vite dev",
    "electron-pack": "electron-builder",
    "electron-pack-win": "electron-builder --win"
  },
  "dependencies": {
    "@csstools/normalize.css": "^12.1.1",
    "@mediapipe/tasks-vision": "^0.10.18",
    "@react-three/drei": "^9.115.0",
    "@react-three/fiber": "^8.17.10",
    "@reduxjs/toolkit": "^2.3.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "axios": "^1.7.7",
    "file-saver": "^2.0.5",
    "kd-tree-ts": "^0.2.1",
    "lodash": "^4.17.21",
    "rbush-3d": "^0.0.4",
    "react": "^18.2.0",
    "react-color": "^2.19.3",
    "react-dom": "^18.2.0",
    "react-draggable": "^4.4.6",
    "react-icons": "^5.3.0",
    "react-redux": "^9.1.2",
    "redux": "^5.0.1",
    "three": "^0.170.0",
    "three-subdivide": "^1.1.5",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.20",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.8",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.minipainter.app",
    "productName": "Mini Painting App",
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "preload.ts"
    ],
    "extraMetadata": {
      "main": "main.js"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/images/mini_painter.png"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/images/mini_painter.png"
    }
  }
}
